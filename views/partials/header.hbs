<html lang="en">

<head>
	<meta charset="utf-8">
	<link rel="icon" href="/img/favicon.ico">
	<meta name="viewport" content="width=device-width,initial-scale=1">
	<meta name="description" content="Bulwark">
	<title>{{ title }}</title>
	
	<link href="https://unpkg.com/carbon-components/css/carbon-components.min.css" rel="stylesheet">
	<script src="https://unpkg.com/carbon-components/scripts/carbon-components.min.js"></script>
</head>

<body class="bx--body">
	<div id="root">
		<div>
			<header aria-label="Keviv Foundry" class="bx--header" role="banner"><a class="bx--skip-to-content"
					href="#main-content" tabindex="0">Skip to main content</a><a class="bx--header__name" href="/"><span
						class="bx--header__name--prefix">Keviv</span>&nbsp;Foundry</a><div class="bx--col" style="text-align: right;">{{#if isLoggedIn}}<a href="/logout" tabindex="0" class="bx--link bx--link--inline">Sign out</a>{{/if}}
                        </div>
			</header>
            <main class="bx--content bx__global-content">
                <div class="bx--grid landing-page">
					{{#if callbackUrl}}
					<nav aria-label="Page navigation" style="padding-top:1.5em;padding-bottom:0;">
                        <ol class="bx--breadcrumb bx--breadcrumb--no-trailing-slash">
                            <li class="bx--breadcrumb-item"><a href={{callbackUrl}} class="bx--link">&lt; Return to application</a></li>
                        </ol>
                    </nav>
					{{/if}}
                    <div class="bx--row landing-page__banner" style="padding-bottom:1.5em;">
                        <div class="bx--col">
                            <h3 class="landing-page__heading">{{ title }}</h3>
                        </div>
                    </div>